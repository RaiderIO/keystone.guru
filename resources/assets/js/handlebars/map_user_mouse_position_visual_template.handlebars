<div class="inner echo_user_{{user_id}}" style="width: calc(8px + {{width}}px); height: calc(8px + {{height}}px);">
    {{#ifCond avatar_url '==' null}}
        {{initials}}
    {{else}}
        <img src="{{avatar_url}}" alt="{{initials}}" style="width: {{width}}px; height: {{height}}px;"/>
    {{/ifCond}}
</div>