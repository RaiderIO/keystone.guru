<div class="form-group">
    <label class="font-weight-bold" for="map_{{map_object_name}}_edit_popup_{{property}}_{{id}}">{{label}}:</label>
    {{#if description}}
        <div id="map_{{map_object_name}}_edit_popup_{{property}}_{{id}}_description" class="">
            {{ description }}
        </div>
    {{/if}}
    <button id="map_{{map_object_name}}_edit_popup_{{property}}_btn_{{id}}"></button>
    <input type="hidden" id="map_{{map_object_name}}_edit_popup_{{property}}_{{id}}" value="{{value}}"/>
</div>
