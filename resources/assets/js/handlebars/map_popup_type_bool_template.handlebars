<div class="form-group">
    <label class="font-weight-bold" for="map_{{map_object_name}}_edit_popup_{{property}}_{{id}}">{{label}}:</label>
    {{#if description}}
        <div id="map_{{map_object_name}}_edit_popup_{{property}}_{{id}}_description" class="">
            {{ description }}
        </div>
    {{/if}}
    <input type="checkbox" class="form-control left_checkbox" value="{{value}}"
           id="map_{{map_object_name}}_edit_popup_{{property}}_{{id}}"
           name="map_{{map_object_name}}_edit_popup_{{property}}_{{id}}"
        {{#ifCond value '===' 1 }}
           checked="checked"
        {{/ifCond}}
        {{#ifCond value '===' true }}
           checked="checked"
        {{/ifCond}}
    />
</div>
