{{#if patreon_user_link.manually_granted}}
    <span>
        {{patreon_benefits_manually_granted_label}}
    </span>
{{else}}
    <select class="form-control selectpicker patreon_benefits" multiple="multiple" data-selected-text-format="count > 1"
            data-count-selected-text="{0} patreon benefits" data-userid="{{id}}" name="patreon_benefits" tabindex="null">
        {{#each paidtiers}}
            <option value="{{id}}"
                {{#if selected}}
                    selected="selected"
                {{/if}}>{{name}}</option>
        {{/each}}
    </select>
{{/if}}
